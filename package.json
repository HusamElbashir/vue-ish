{
  "name": "vue-reactivity-experiment",
  "version": "1.0.0",
  "description": "A simple experiment to implement Vue.js's reactivity system.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "webpack --watch",
    "build": "webpack",
    "lint": "eslint --ext .js src test",
    "lint:autofix": "yarn lint --fix",
    "test": "jest"
  },
  "installConfig": {
    "pnp": true
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/src/$1"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-jest": "^24.8.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  }
}
